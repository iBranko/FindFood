{{#partial "content"}}

    <h1>Add a new Restaurant!</h1>

    <form action="/restaurants/new" method="post">
        <label for="name">Name</label>
        <input id="name" name="name" type="text"><br>
        <label for="address">Address</label>
        <input id="address" name="address" type="text"><br>
        <label for="zipcode">Zipcode</label>
        <input id="zipcode" name="zipcode" type="text"><br>
        <label for="phone">Phone</label>
        <input id="phone" name="phone" type="text"><br>
        <label for="website">Website</label>
        <input id="website" name="website" type="text"><br>
        <label for="email">Email</label>
        <input id="email" name="email" type="text"><br>

        <button type="submit" class="btn btn-default">Add new restaurant</button>
    </form>


{{/partial}}

{{> layout.hbs}}