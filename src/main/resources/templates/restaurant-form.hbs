{{#partial "content"}}

    <h1>Add a new Restaurant!</h1>

    <form action="/restaurants/new" method="post">
        <div class="form-group">
            <div class="col-xs-4">
                <label for="name">Name</label>
                <input id="name" name="name" type="text" class="form-control"><br>
                <label for="address">Address</label>
                <input id="address" name="address" type="text" class="form-control"><br>
                <label for="zipcode">Zipcode</label>
                <input id="zipcode" name="zipcode" type="text" class="form-control"><br>
                <label for="phone">Phone</label>
                <input id="phone" name="phone" type="text" class="form-control"><br>
                <label for="website">Website</label>
                <input id="website" name="website" type="text" class="form-control"><br>
                <label for="email">Email</label>
                <input id="email" name="email" type="text" class="form-control"><br>
                <button type="submit" class="btn btn-default">Add new restaurant</button>
            </div>
        </div>
    </form>


{{/partial}}

{{> layout.hbs}}